<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="back"
        android:id="@+id/backVault"
        android:onClick="onBackVault"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Change Password"
        android:id="@+id/changePassword"
        android:onClick="onChangePassword"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePassword"
        android:layout_centerInParent="true"
        android:text="Disable auto logout"
        android:layout_marginTop="50dp"
        android:id="@+id/loginState"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginState"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Log out from your account"
        android:id="@+id/logout"
        android:onClick="onLogout"
        />

</RelativeLayout>