<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#fcfc05"
    tools:context=".SettingsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="back"
        android:id="@+id/backVault"
        android:onClick="onBackVault"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Change Font"
        android:id="@+id/changeFont"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changeFont"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Change Password"
        android:id="@+id/changePassword"
        android:onClick="onChangePassword"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Log out from your account"
        android:id="@+id/logout"
        android:onClick="onLogout"
        />







</RelativeLayout>