<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewItemActivitySQL">

    <TextView
        android:id="@+id/viewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="52dp"
        android:hint="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewItemLogo" />

    <TextView
        android:id="@+id/viewItemUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="username"
        app:layout_constraintStart_toStartOf="@+id/viewItemName"
        app:layout_constraintTop_toBottomOf="@+id/viewItemName" />

    <TextView
        android:id="@+id/viewItemPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="password"
        app:layout_constraintStart_toStartOf="@+id/viewItemName"
        app:layout_constraintTop_toBottomOf="@+id/viewItemUsername" />

    <TextView
        android:id="@+id/viewItemUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="url"
        app:layout_constraintStart_toStartOf="@+id/viewItemName"
        app:layout_constraintTop_toBottomOf="@+id/viewItemPassword" />

    <Button
        android:id="@+id/viewItemDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewItemUpdate" />

    <Button
        android:id="@+id/viewItemUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:text="update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewItemUrl" />

    <ImageView
        android:id="@+id/viewItemLogo"
        android:layout_width="91dp"
        android:layout_height="81dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewItemName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/viewItemUsername" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/viewItemPassword" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/viewItemUrl" />

    <ImageButton
        android:id="@+id/viewItemCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:background="?android:selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewItemUsername"
        app:srcCompat="@drawable/ic_copy" />

    <ImageButton
        android:id="@+id/viewItemCopyPassword"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewItemCopy"
        app:layout_constraintTop_toTopOf="@+id/viewItemPassword"
        app:srcCompat="@drawable/ic_copy" />

    <ImageButton
        android:id="@+id/viewItemLaunch"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewItemCopy"
        app:layout_constraintTop_toTopOf="@+id/viewItemUrl"
        app:srcCompat="@drawable/ic_launch" />

</androidx.constraintlayout.widget.ConstraintLayout>