<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Name"
        android:layout_below="@+id/viewItemImageView"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/Name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:hint="Username"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/User_email"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/User_email"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/Webpass"
        />

    <ImageButton
        android:id="@+id/viewItemCopyF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackground"
        android:layout_alignTop="@+id/User_email"
        app:srcCompat="@drawable/ic_copy" />

    <ImageButton
        android:id="@+id/viewItemCopyPasswordF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackground"
        android:layout_alignTop="@+id/Webpass"
        app:srcCompat="@drawable/ic_copy" />

    <ImageButton
        android:id="@+id/viewItemLaunchF"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"

        android:layout_alignTop="@+id/Url"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        app:srcCompat="@drawable/ic_launch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Webpass"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="URL"
        android:textColor="@color/black"
        android:id="@+id/Url"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Url"
        android:layout_marginLeft="70dp"
        android:id="@+id/update"
        android:layout_marginTop="50dp"
        android:text="Update Item"
        android:onClick="onChange"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Url"
        android:layout_marginLeft="240dp"
        android:id="@+id/Delete"
        android:layout_marginTop="50dp"
        android:text="Delete Item"
        android:onClick="onDeleteItem"
        />

    <ImageView
        android:id="@+id/viewItemImageView"
        android:layout_width="83dp"
        android:layout_height="78dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>


</RelativeLayout>