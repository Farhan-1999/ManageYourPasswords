<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#fcfc05"
    tools:context=".UpdateActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="back"
        android:onClick="onBackPress"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Name:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/prevName"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="text"
        android:id="@+id/newName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevName"
        android:layout_marginTop="30dp"
        android:text="Username/Email:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/prevUserEmail"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:id="@+id/newUserEmail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevUserEmail"
        android:layout_marginTop="30dp"
        android:text="Password:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/prevPassword"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevUserEmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="text"
        android:id="@+id/newPassword"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevPassword"
        android:layout_marginTop="30dp"
        android:text="URL:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/prevUrl"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prevPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="text"
        android:id="@+id/newUrl"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevUrl"
        android:layout_centerHorizontal="true"
        android:id="@+id/update"
        android:layout_marginTop="70dp"
        android:text="Update"
        android:onClick="onUpdateItem"
        />




</RelativeLayout>